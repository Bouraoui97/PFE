<!doctype html>
<html lang="eng">
<head>
  <meta charset="utf-8">
</head>


{% block body %} 
   <h2>Liste des bons de commande</h2>  
   <table border ="2" class = "table">  
      <tr>  
         
         <th>ID</th>  
         <th>Numéro Bon de Commande</th>  
         <th>Nombre matériel</th> 
         <th>Prix</th>   
         <th>Delete</th>
         <th>Update</th>
      </tr>  
      {% for bdc in BonDeCommande %} 
      <tr>  
      
         <td>{{ bdc.id }}</td>   
         <td>{{ bdc.numbc }}</td>
         <td>{{ bdc.nmbrmat }}</td>  
         <td>{{ bdc.prix }}</td>  
         <td><a href="{{ path('deletebondecmd',{'id':bdc.id}) }}">Delete</a></td> 
         <td><a href="{{ path('updatebondecmd',{'id':bdc.id}) }}">Update</a></td> 
         
         
      </tr>  
      {% endfor %} 
   </table> 
{% endblock %}  

</html>
